                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@color/color_a1a1a1"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item
        android:width="0.5dp"
        android:gravity="right">
        <shape>
            <solid android:color="@color/color_a1a1a1" />
            <corners android:bottomRightRadius="3dp"></corners>
        </shape>
    </item>
    <item
        android:width="0.5dp"
        android:gravity="left">
        <shape>
            <solid android:color="@color/color_a1a1a1" />
            <corners android:bottomLeftRadius="3dp"></corners>
        </shape>
    </item>
    <item
        android:width="0.5dp"
        android:gravity="bottom">
        <shape>
            <solid android:color="@color/color_a1a1a1" />
        </shape>
    </item>


</layer-list>
